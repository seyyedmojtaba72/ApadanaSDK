<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="Widgets">
        <attr name="sau_text" format="string" />
        <attr name="sau_font" format="string" />
        <attr name="sau_html" format="string" />
        <attr name="sau_radius" format="dimension" />
        <attr name="sau_textSize" format="dimension" />
        <attr name="sau_textColor" format="color" />
        <attr name="sau_errorGravity">
            <flag name="top" value="0x30"/>
            <flag name="bottom" value="0x50"/>
            <flag name="left" value="0x03"/>
            <flag name="right" value="0x05"/>
            <flag name="center_vertical" value="0x10"/>
            <flag name="fill_vertical" value="0x70"/>
            <flag name="center_horizontal" value="0x01"/>
            <flag name="center" value="0x11"/>
            <flag name="start" value="0x00800003"/>
            <flag name="end" value="0x00800005"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="AutoFitTextViewPlus">
        <!-- Minimum size of the text. -->
        <attr name="sau_minTextSize" format="dimension" />
        <!-- Amount of precision used to calculate the correct text size to fit within its
        bounds. Lower precision is more precise and takes more time. -->
        <attr name="sau_precision" format="float" />
        <!-- Defines whether to automatically resize text to fit to the view's bounds. -->
        <attr name="sau_sizeToFit" format="boolean" />
    </declare-styleable>

    <declare-styleable name="sau_pile">
        <attr name="interval" format="dimension" />
        <attr name="sizeRatio" format="float" />
        <attr name="scaleStep" format="float" />
        <attr name="displayCount" format="float" />
    </declare-styleable>
</resources>
